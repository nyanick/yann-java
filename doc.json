{
  "swagger": "2.0",
    "info": {
    "description": "This file describe iwomipay core APIs. All apis are protectected operation but for the GET TOKEN Service <br/>one need to be first authenticated to perform one. Authentication is made through the Get Token service",
    "version": "1.0",
    "title": "IWOMIPAY",
    "contact": {
      "email": "yanicknde@gmail.com"
    }
  },
  "host": "51.195.139.226:8443",
  "basePath": "/iwomi_pay_prod",
  
  "schemes": [
    "https"
  ],
  "paths": {
    "/authenticate": {
      "post": {
        "tags": [
          "GET TOKEN "
        ],
        "summary": "Authenticate to get the access token inorder to be granted authorized access to the webservices",
        "description": "",
        "operationId": "authenticate",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Request body that is send with the request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authenticate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Request received",
            "schema": {
              "$ref": "#/definitions/TokenResp"
            }
          }
          
        }
      }
    },
  
    "/iwomipayStatus/{external_id}": {
      "get": {
        "tags": [
          "GET STATUS"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "external_id",
            "description": "Transaction Id we are trying to get its status",
            "type": "string",
            "required": true
          }
        ],
        "Partner": "Application & Application User",
        "summary": "Check the status Operation of your transaction.",
        "description": "",
        "operationId": "iwomipayStatus",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Request successful",
            "schema": {
              "$ref": "#/definitions/StatusResponse"
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "": {
      "in": "header",
      "name": "Partner",
      "description": "base64(ApiUser:ApiSecret)",
      "type": "apiKey"
    },
    "Bearer": {
      "in": "header",
      "name": "Authorization",
      "type": "apiKey"
    }
  },
  "definitions": {
    "TokenResp": {
      "type": "object",
      "properties": {
        "success": {
          "type": "integer",
          "format": "int32"
        },
        "token": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "authenticate": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        
        "username": {
          "type": "string",
          "example": "iwomi"
        },
        "password": {
          "type": "string",
          "example": "iwomipay"
        }
      },
      "xml": {
        "name": "authenticate"
      }
    },
    "Tag": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Tag"
      }
    },
    "StatusResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "string",
          "description": "01 - success; 100 - failed; 1000 - pending"
        },
        "message": {
          "type": "string"
        },
        "external_id": {
          "type": "string",
          "description": "transaction Id"
        }
      },
      "xml": {
        "name": "StatusResponse"
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about IWOMI Technologies",
    "url": "http://iwomitechnologies.com"
  }
}
