{
  "swagger": "2.0",
    "info": {
    "description": "This file describe iwomipay core APIs. All apis are protectected operation but for the GET TOKEN Service <br/>one needs to be authenticate inorder to perform an operartion. Authentication is made through the Get Token service",
    "version": "1.0",
    "title": "IWOMIPAY",
    "contact": {
      "email": "yanicknde@gmail.com"
    }
  },
  "host": "51.83.98.221:8080",
  "basePath": "/iwomi_pay_prodv2",
  
  "schemes": [
    "http"
  ],
  "paths": {
    "/authenticate": {
      "post": {
        "tags": [
          "GET TOKEN "
        ],
        "summary": "Authenticate to get the access token inorder to be granted authorized access to the webservices",
        "description": "",
        "operationId": "authenticate",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Request body that is send with the request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authenticate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Request received",
            "schema": {
              "$ref": "#/definitions/TokenResp"
            }
          }
          
        }
      }
    },
    "/iwomipay": {
      "post": {
        "tags": [
          "PERFORM OPERATION (Collection || Disbursement) "
        ],
        "summary": "Authenticate to get the access token inorder to be granted authorized access to the webservices",
        "description": "",
        "operationId": "iwomipay",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "Bearer": []
          },
          {
            "": []
          }
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Request body that is send with the request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/OperationBody"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Request received",
            "schema": {
              "$ref": "#/definitions/TokenResp"
            }
          }
          
        }
      }
    },
    "/iwomipayStatus/{internal_id}": {
      "get": {
        "tags": [
          "GET STATUS"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "internal_id",
            "description": "Transaction Id(this is the ID from iwomipay not partner's external_id) we are trying to get its status",
            "type": "string",
            "required": true
          }
        ],
        "summary": "Check the status Operation of your transaction.",
        "description": "",
        "operationId": "iwomipayStatus",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Request successful",
            "schema": {
              "$ref": "#/definitions/StatusResponse"
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "": {
      "in": "header",
      "name": "AccountKey",
      "description": "base64(ApiUser:ApiSecret)",
      "type": "apiKey"
    },
    "Bearer": {
      "in": "header",
      "name": "Authorization",
      "type": "apiKey"
    }
  },
  "definitions": {
    "TokenResp": {
      "type": "object",
      "properties": {
        "status": {
          "type": "integer",
          "format": "int32",
          "description":" 01 - Authentication successful \n 401 - Invalid credentials"
        },
        "token": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "OperationBody": {
      "type": "object",
      "properties": {
        "op_type": {
          "type": "string",
          "description": "credit = cashOut Operations; debit = CashIn Operations "
        },
        "type": {
          "type": "string",
          "description": "momo = MTN momo; om = Orange momo"
        },
        "amount": {
          "type": "string"
        },
        "external_id": {
          "type": "string",
          "description": "transaction ID from partner"
        },
        "motif": {
          "type": "string"
        },
        "tel": {
          "type": "string",
          "description": "237XXXXXXXXX"
        },
        "country": {
          "type": "string",
          "description": "cm - Cameroon"
        },
        "currency": {
          "type": "string",
          "description": "optional - deafult = xaf"
        },
        "callback_url": {
          "type": "string",
          "example":"http://mybaseurl/callback_service",
          "description": "Return final status of the operation, same response as the operation status (/iwomipayStatus) webservice"
        }
      }
    },
    "authenticate": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        
        "username": {
          "type": "string",
          "example": "iwomi"
        },
        "password": {
          "type": "string",
          "example": "iwomipay"
        }
      },
      "xml": {
        "name": "authenticate"
      }
    },
   
    "StatusResponse": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "description": "01 - success \n 100 - failed \n 1000 - pending \n 409 - balance insufficient \n401 - Unauthorized \n 400 - Wrong Formatting, Synthax Error\n 404 - Resource not found \n 500 - Service temporarily unavailable\n 503 - Forbidden "; 
        },
        "message": {
          "type": "string"
        },
        "external_id": {
          "type": "string",
          "description": "transaction Id from Partner"
        },
        "internal_id": {
          "type": "string",
          "description": "transaction Id in IWOMIPAY system"
        }
      },
      "xml": {
        "name": "StatusResponse"
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about IWOMI Technologies",
    "url": "http://iwomitechnologies.com"
  }
}
