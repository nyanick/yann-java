{
  "swagger": "2.0",
  "info": {
    "description": "This is the complete documentation of iwomipay payment api. Do not hesitate to contact technical support incase of any issue integrating.",
    "version": "1.0",
    "title": "IWOMIPAY",
    "contact": {
      "email": "iwomipay@gmail.com"
    }
  },
  "host": "51.195.139.226:8443",
  "basePath": "/iwomi_pay_prod",
  
  "schemes": [
    "https"
  ],
  "paths": {
    "/authenticate": {
      "post": {
        "tags": [
          "Get Token "
        ],
        "summary": "Authenticate to get the access token inorder to be granted authorized access to the webservices",
        "description": "",
        "operationId": "authenticate",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Request body that is send with the request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authenticate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Request received",
            "schema": {
              "$ref": "#/definitions/tokenResp"
            }
          }
          
        }
      }
    },
  
    "/iwomipayStatus/{external_id}": {
      "get": {
        "tags": [
          "Get Status"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "Partner": "Application & Application User",
        "summary": "Check the status Operation of your transaction.",
        "description": "",
        "operationId": "iwomipayStatus",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "header",
            "description": "Insert token to indicate authorization to the api.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/statusHeader"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "400": {
            "description": "Invalid Order"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "Partner": {
      "in": "header",
      "name": "Partner",
      "description": "base64(ApiUser:ApiSecret)",
      "type": "apiKey"
    },
    "Bearer": {
      "in": "header",
      "name": "Authorization",
      "type": "apiKey"
    }
  },
  "definitions": {
    "ApiResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "statusHeader": {
      "type": "object",
      "properties": {
        "Authorization": {
          "type": "Bearer +string"
        }
      }
    },
    "tokenResp": {
      "type": "object",
      "properties": {
        "success": {
          "type": "integer",
          "format": "int32"
        },
        "token": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "Category": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Category"
      }
    },
    "authenticate": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        
        "username": {
          "type": "string",
          "example": "iwomi"
        },
        "password": {
          "type": "string",
          "example": "iwomipay"
        }
      },
      "xml": {
        "name": "authenticate"
      }
    },
    "Tag": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Tag"
      }
    },
    "Order": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "petId": {
          "type": "integer",
          "format": "int64"
        },
        "quantity": {
          "type": "integer",
          "format": "int32"
        },
        "shipDate": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "Order Status",
          "enum": [
            "placed",
            "approved",
            "delivered"
          ]
        },
        "complete": {
          "type": "boolean"
        }
      },
      "xml": {
        "name": "Order"
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "userStatus": {
          "type": "integer",
          "format": "int32",
          "description": "User Status"
        }
      },
      "xml": {
        "name": "User"
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about IWOMI Technologies",
    "url": "http://iwomitechnologies.com"
  }
}
